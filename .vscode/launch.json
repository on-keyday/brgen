{
    // IntelliSense を使用して利用可能な属性を学べます。
    // 既存の属性の説明をホバーして表示します。
    // 詳細情報は次を確認してください: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug brgen",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceRoot}/src/tool/brgen",
            "args": [
                "-src2json",
                "${workspaceRoot}/build/tool/src2json.exe",
                "-json2code",
                "${workspaceRoot}/build/tool/json2go.exe",
                "${workspaceRoot}/example/quic_packet.bgn",
            ],
        },
        {
            "name": "Debug src2json",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/tool/src2json",
            "args": [
                "example/large_sample.bgn"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "build",
            "symbolSearchPath": "lib\\"
        },
        {
            "name": "Debug json2cpp",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/tool/json2cpp",
            "args": [
                "ignore/sample.json"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "build",
            "symbolSearchPath": "lib\\"
        },
        {
            "name": "Debug attach",
            "type": "cppvsdbg",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "type": "extensionHost",
            "request": "launch",
            "name": "Launch LSP Client",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}/lsp"
            ],
            "outFiles": [
                "${workspaceRoot}/lsp/client/out/**/*.js"
            ],
            "preLaunchTask": "npm_watch"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to LSP Server",
            "port": 6009,
            "restart": true,
            "outFiles": [
                "${workspaceRoot}/lsp/server/out/**/*.js"
            ]
        },
    ]
}