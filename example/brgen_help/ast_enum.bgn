    input_offset
    input_bit_offset
    input_remain
    input_subrange
    config_endian_little
    config_endian_big
    config_endian_native
    config_bit_order_lsb
    config_bit_order_msb

enum OrderType:
    # byte order
    # if input is 0x12345678:
    #   config.endian.big: 0x12 0x34 0x56 0x78 
    #   config.endian.little: 0x78 0x56 0x34 0x12
    byte
    # input stream bit order
    # if input byte is 0xC0
    # interpret as bit stream:
    #   config.bit_order.msb: 1 1 0 0 0 0 0 0 
    #   config.bit_order.lsb: 0 0 0 0 0 0 1 1 
    bit_stream 
    # bit mapping order
    # if input bit stream is 1 1 0 0 0 0 0 0
    # mapping to byte: 
    #   config.bit_order.msb: 0xC0 
    #   config.bit_order.lsb: 0x03
    # bit_input and bit_mapping is used together
    # for example if input is 0xC0:
    #   bit_stream             bit_mapping           byte
    #   config.bit_order.msb, config.bit_order.msb: 0xC0
    #   config.bit_order.lsb, config.bit_order.lsb: 0xC0
    #   config.bit_order.msb, config.bit_order.lsb: 0x03
    #   config.bit_order.lsb, config.bit_order.msb: 0x03
    bit_mapping 
    # specify both bit_input and bit_mapping
    bit_both
    
enum SpecialLiteralKind:
    input_ = "input"
    output_ = "output"
    config_  = "config"
 

# FormatType is used to determine the `format`'s layout
enum FormatType:
    :u32
    # none, empty format
    none = 0
    # int and enum is used
    fixed_primitive = 1 << 0
    # floating point is used
    fixed_float = 1 << 1
    # fixed length array of int or enum
    fixed_primitive_array = 1 << 2
    # fixed length array of floating point 
    fixed_float_array = 1 << 3
    # variable length array of int or enum
    variable_primitive_array = 1 << 4
    # variable length array of floating point
    variable_float_array = 1 << 5
    # variable length array of struct
    variable_struct_array = 1 << 6
    # fixed length array of struct
    fixed_struct_array = 1 << 7
    # struct
    struct_ = 1 << 8
    # conditional union
    conditional = 1 << 9
    # peek operation (input.peek() or field :Type(input.peek = true))
    static_peek = 1 << 10
    # bit field
    bit_field = 1 << 11
    # reading state variable
    read_state = 1 << 12
    # writing state variable
    write_state = 1 << 13
    # terminal string pattern array
    terminal_string = 1 << 14
    # terminal end pattern array
    terminal_end = 1 << 15
    # terminal regex pattern array
    terminal_regex = 1 << 16
    # terminal conditional function pattern array
    terminal_fn = 1 << 17
    # bit stream required 
    bit_stream = 1 << 18
    # dynamic endian required
    dynamic_endian = 1 << 19
    # dynamic bit order required
    dynamic_bit_order = 1 << 20
    # full input required (required subrange with offset syntax)
    full_input = 1 << 21
    # backward input required
    backward_input = 1 << 22
    # magic string
    magic_string = 1 << 23
    # magic number
    magic_number = 1 << 24
    # assertion exists
    assertion = 1 << 25
    # explicit error
    explicit_error = 1 << 26
    # procedual method invocation
    procedural = 1 << 27
    # for loop
    for_loop = 1 << 28
    # local variable
    local_variable = 1 << 29
