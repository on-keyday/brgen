{
  "src2json": "./tool/src2json",
  "input_dir": [
    "./example/",
    "./example/gen_step/",
    "./example/brgen_help",
    "./example/vm_test",
    "./example/feature_test"
  ],
  "suffix": ".bgn",
  "warnings": {
    "disable_untyped": true,
    "disable_unused": true
  },
  "test_info_output": "./ignore/example/test_info.json",
  "output": [
    {
      "generator": "./tool/json2c",
      "output_dir": "./ignore/example/c/",
      "args": [
        "--add-line-map",
        "--use-overflow-check",
        "--single",
        "--zero-copy",
        "--use-memcpy"
      ]
    }
  ]
}
